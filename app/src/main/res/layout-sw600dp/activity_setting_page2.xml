<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.setting_page">

    <TextView
        android:layout_width="408dp"
        android:layout_height="140dp"
        android:fontFamily="sans-serif"
        android:text="@string/Settings"
        android:textSize="80sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="3dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/SettingsLinear"
        android:layout_width="926dp"
        android:layout_height="1016dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295">

        <Switch
            android:id="@+id/timer"
            android:layout_width="890dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:summary="Enable/disable timer"
            android:text="Timer"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="45sp" />

        <!--- commented out for use in iteration 3
         <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="@string/howtoplay"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/purple_700"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

           >
           -->

        <!-- to be implemented in iteration 3 -->
        <TextView
            android:id="@+id/modes"
            android:layout_width="890dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/modes"
            android:textSize="45sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <RadioGroup
            android:id="@+id/languageRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp">

            <RadioButton
                android:id="@+id/english"
                android:layout_width="890dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="45sp"
                android:text="@string/english"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <RadioButton
                android:id="@+id/French"
                android:layout_width="890dp"
                android:layout_height="wrap_content"
                android:text="@string/french"
                android:textSize="45sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </RadioGroup>


        <TextView
            android:id="@+id/levels"
            android:layout_width="890dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/levels"
            android:textSize="45sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <RadioGroup
            android:id="@+id/difficultyRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="10dp">

            <RadioButton
                android:id="@+id/easyButton"
                android:layout_width="890dp"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="45sp"
                android:text="@string/easy"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <RadioButton
                android:id="@+id/mediumButton"
                android:layout_width="890dp"
                android:layout_height="wrap_content"
                android:textSize="45sp"
                android:text="@string/intermediate"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <RadioButton
                android:id="@+id/hardButton"
                android:layout_width="890dp"
                android:layout_height="wrap_content"
                android:textSize="45sp"
                android:text="@string/hard"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />
        </RadioGroup>

        <TextView
            android:id="@+id/gridLayout"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Grid Layout"
            android:textSize="45sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <RadioGroup
            android:id="@+id/GridRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:layout_marginRight="10dp">

            <RadioButton
                android:id="@+id/fourbyfour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="4x4"
                android:textSize="45sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <RadioButton
                android:id="@+id/sixbysix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6x6"
                android:textSize="45sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <RadioButton
                android:id="@+id/ninebynine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9x9"
                android:textSize="45sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <RadioButton
                android:id="@+id/twelvebytwelve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12x12"
                android:textSize="45sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button14"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="8dp"
        android:onClick="backToMain"
        android:text="Back"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/save"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:text="Save Changes"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button14"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
